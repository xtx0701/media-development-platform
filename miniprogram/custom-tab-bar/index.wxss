/* custom-tab-bar/index.wxss */
.tarbar_body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 680rpx;
        height: 150rpx;
        border-radius: 100rpx;
        background-color: #ffffff;
        position: absolute;
        bottom: 40rpx;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.2);
}

.tarbar_part {
        width: 40%;
        height: 100%;
}


.tarbar_part>view:nth-child(1) {
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 50%;
        padding-top: 40rpx;
}

.tarbar_part>view:nth-child(1)>image {
        width: 45rpx;
        height: 45rpx;
}

.tarbar_part>view:nth-child(2) {
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 50%;
        padding-bottom: 30rpx;
        font-size: 20rpx;
        font-weight: bolder;
}